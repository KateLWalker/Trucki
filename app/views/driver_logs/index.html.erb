<p id="notice"><%= notice %></p>

<h1>Driver Logs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Trip number</th>
      <th>Start odometer</th>
      <th>End odometer</th>
      <th>Miles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @driver_logs.each do |driver_log| %>
      <tr>
        <td><%= driver_log.date %></td>
        <td><%= driver_log.trip_number %></td>
        <td><%= driver_log.start_odometer %></td>
        <td><%= driver_log.end_odometer %></td>
        <td><%= driver_log.miles = driver_log.end_odometer - driver_log.start_odometer %></td>
        <td><%= link_to 'Show', driver_log %></td>
        <td><%= link_to 'Edit', edit_driver_log_path(driver_log) %></td>
        <td><%= link_to 'Destroy', driver_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

